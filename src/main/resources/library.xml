<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.12.0.xsd">
  <jdbc>
    <driver>org.mariadb.jdbc.Driver</driver>
    <url>jdbc:mariadb://mariadb:3306</url>
    <user>streamdb</user>
    <password>streamdb_pass</password>
  </jdbc>
  <generator>
    <database>
      <includes>streamdb.log_group|streamdb.host|streamdb.stream|journaldb.host|journaldb.bucket|journaldb.logfile</includes>
    </database>
    <target>
      <packageName>com.teragrep.pth06.jooq.generated</packageName>
      <directory>src/main/java</directory>
    </target>
    <generate>
      <generatedAnnotationType>JAVAX_ANNOTATION_GENERATED</generatedAnnotationType>
    </generate>
  </generator>
</configuration>
